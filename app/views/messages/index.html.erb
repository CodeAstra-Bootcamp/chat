<div id="messages_container" class="container">
  <div id="enter_message">
    <div class="message row">
      <%= image_tag current_user.image, class: "user_image" %>
      <%= simple_form_for @new_message, remote: true, html: {class: "form-inline"} do |f| %>
        <%= f.input :note, label: false, placeholder: "Enter Message", input_html: { id: "note_input" } %>
        <%= f.submit 'Submit', hidden: true %>
      <% end %>  
    </div>
  </div>

  <div id="messages"></div>
</div>

<script id="message_template" type="x-tmpl-mustache">
<div class="message row">
  <div class="user_name">{{message.name}}</div>
  <img src="{{message.image}}" class="user_image" />
  <div class="note">
    {{message.note}}
    <div class="time pull-right">{{message.time}}</div>
  </div>
</div>
</script>

<%= link_to "Get Messages", root_path(format: 'js'), remote: true, id: "get_messages_link", class: "hidden" %>